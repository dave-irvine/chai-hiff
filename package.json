{
  "name": "chai-hiff",
  "version": "1.0.0",
  "description": "HTML matching assertions for Chai.js.",
  "main": "chai-hiff.js",
  "scripts": {
    "test": "run-p mocha lint",
    "mocha": "mocha",
    "lint": "eslint .",
    "check-diff": "git diff --exit-code --quiet",
    "prepublish": "run-p test check-diff",
    "preversion": "run-p preversion",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dave-irvine/chai-hiff.git"
  },
  "keywords": [
    "chai",
    "hiff",
    "html",
    "diff"
  ],
  "author": "Dave Irvine <dave@daveirvine.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dave-irvine/chai-hiff/issues"
  },
  "homepage": "https://github.com/dave-irvine/chai-hiff",
  "dependencies": {
    "colors": "^1.1.2",
    "hiff": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.2"
  }
}
